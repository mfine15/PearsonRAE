{
  "manifest_version": 3,
  "name": "PearsonRAE",
  "version": "2.4.0",
  "description": "Rolls Above Expectation tracker for Colonist.io",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://colonist.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://colonist.io/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Colonist Rolls Tracker"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
